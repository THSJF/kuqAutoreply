<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/add_ques_activityLinearLayout"
	android:gravity="top|center">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<ScrollView
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<Spinner
						android:layout_weight="1"
						android:id="@+id/diff"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"/>

					<Spinner
						android:id="@+id/type"
						android:layout_weight="1"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"/>

				</LinearLayout>

				<EditText
					android:id="@+id/ques"
					android:hint="问题"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<Button
					android:text="添加图片"
					android:id="@+id/add_ques_activityButton_addPic"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<ImageView
					android:visibility="gone"
					android:id="@+id/add_ques_activityImageView"
					android:layout_width="80dp"
					android:layout_height="80dp"/>

				<EditText
					android:id="@+id/ans1"
					android:hint="答案1(是)"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<EditText
					android:id="@+id/ans2"
					android:hint="答案2(否)"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<EditText
					android:id="@+id/ans3"
					android:hint="答案3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<EditText
					android:id="@+id/ans4"
					android:hint="答案4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<TextView
					android:text="正确答案:"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<RadioGroup
					android:id="@+id/trueans"
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<RadioButton
						android:id="@+id/r1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="答案1"/>

					<RadioButton
						android:id="@+id/r2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="答案2"/>

					<RadioButton
						android:id="@+id/r3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="答案3"/>

					<RadioButton
						android:id="@+id/r4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="答案4"/>

				</RadioGroup>

				<EditText
					android:id="@+id/reason"
					android:hint="原因"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<Button
					android:id="@+id/mainButtonSend"
					android:text="提交"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<Button
					android:id="@+id/clean"
					android:text="清空"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

			</LinearLayout>

		</ScrollView>

	</LinearLayout>

</LinearLayout>

